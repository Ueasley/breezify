{
  "name": "breezify",
  "version": "0.0.1",
  "description": "A tool for minifying CSS class names",
  "author": "Gleb Gorokhov <theververy@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/glebgorokhov/breezify/issues"
  },
  "homepage": "https://github.com/glebgorokhov/breezify#readme",
  "private": false,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "pnpm run clean && tsc",
    "lint": "eslint . --ext .ts --fix",
    "test": "vitest run",
    "test-watch": "vitest",
    "cli-preview": "pnpm run build && node ./lib",
    "prepack": "pnpm lint && pnpm test && pnpm build",
    "prepublish": "pnpm prepack && npm publish --dry-run",
    "publish": "pnpm prepack && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glebgorokhov/breezify"
  },
  "keywords": [
    "css",
    "class",
    "classes",
    "classnames",
    "names",
    "minify",
    "obfuscate",
    "uglify",
    "breezify"
  ],
  "dependencies": {
    "acorn": "^8.11.3",
    "acorn-walk": "^8.3.2",
    "astring": "^1.8.6",
    "chalk": "^5.3.0",
    "clean-css": "^5.3.3",
    "commander": "^12.0.0",
    "css-tree": "^2.3.1",
    "glob": "^10.3.10",
    "html-minifier": "^4.0.0",
    "inquirer": "^9.2.15",
    "lodash.merge": "^4.6.2",
    "lodash.set": "^4.3.2",
    "parse5": "^7.1.2",
    "pretty": "^2.0.0"
  },
  "devDependencies": {
    "@types/clean-css": "^4.2.11",
    "@types/css-tree": "^2.3.6",
    "@types/html-minifier": "^4.0.5",
    "@types/inquirer": "^9.0.7",
    "@types/lodash.merge": "^4.6.9",
    "@types/lodash.set": "^4.3.9",
    "@types/node": "^20.11.19",
    "@types/pretty": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vitest": "^1.3.1"
  }
